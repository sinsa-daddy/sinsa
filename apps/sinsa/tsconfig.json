{
  "extends": "@modern-js/tsconfig/base",
  "compilerOptions": {
    "declaration": false,
    "jsx": "preserve",
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"],
      "@shared/*": ["./shared/*"]
    },
    "module": "ESNext"
  },
  "include": ["src", "shared", "config", "plugins", "modern.config.ts"],
  "exclude": ["**/node_modules", "config/public/sw.js", "functions/**/*.js"]
}
